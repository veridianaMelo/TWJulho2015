package br.com.Caellum.Variáveis3;

public class Exercício2 {

	public static void main(String[] args) {

		int acumulador = 0;
		for(int i = 1; i < 1000; i++){
			acumulador += i;
		//	System.out.println(acumulador);	
		}
	//	System.out.println(acumulador);

	

	int min = 1;
	int max = 1000;
	
	int soma = (min + max) * ((max - min + 1) / 2);
	System.out.println(soma);
	}
}
