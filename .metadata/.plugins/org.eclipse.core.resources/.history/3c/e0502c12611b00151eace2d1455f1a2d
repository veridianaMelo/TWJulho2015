package br.com.Edmodo.IntroducaoAProgramacaoI;

import java.util.Scanner;

public class HoraDoExercicio6 {

	public static void main(String[] args) {

		System.out.println("Qual sua data de nascimento? Digite o ano:");
		int ano = 0;
		Scanner teclado = new Scanner(System.in);
		ano = teclado.nextInt();

		int anoAtual = 2015;
		int idadeEmAnos = anoAtual - ano;
		System.out.println(idadeEmAnos);
		
		System.out.println("Agora digite o mês:");
		int mes = 0;
		Scanner teclado1 = new Scanner(System.in);
		mes = teclado1.nextInt();
        int mesAtual = 6;
        int idadeEmMes = mesAtual - mes;
        if(idadeEmMes >= 0){
        	System.out.println("Sua idade é :" + idadeEmAnos + "anos e" + idadeEmMes + "meses");
        }
        System.out.println(idadeEmMes);
        
				



		int idade = 18;
		if (idade >= 5 && idade <= 7){
			System.out.println("Infantil A  5 - 7 anos.");
		} else if( idade >= 8 && idade <= 10){
			System.out.println("Infantil B  8 - 10 anos.");
		} else if( idade >=11 && idade <= 13){
			System.out.println("Juvenil  A  11 - 13 anos.");		
		} else if(idade >= 14 && idade <= 17){
			System.out.println("Juvenil  B  14 - 17 anos.");
		} else if (idade >= 18){
			System.out.println("Adulto Maiores de 18 anos.");	
		}

	}}
