package br.com.Caellum.Variáveis3;

public class Exercício2 {

	public static void main(String[] args) {

		int acumulador = 0;
		for(int i = 1; i < 1000; i++){
			acumulador += i;
		//	System.out.println(acumulador);	
		}
	//	System.out.println(acumulador);

	

	int a1 = 1;
	int an = 10;
	
	int somaPA = (a1 + an) * ((an - a1 + 1) / 2);
	System.out.println(somaPA);
	}
}
