package br.com.Caellum.Variáveis3;

public class TestaIdade {

	public static void main(String[] args) {
		
		int idade = 20;
		System.out.println("A idade atual são " +  idade + " anos de idade.");
		
		int idadeNoAnoQueVem;
		idadeNoAnoQueVem = idade + 1;
		
		System.out.println("Ano que vem a idade será de " + idadeNoAnoQueVem + " anos de idade.");
	
	    int id = 30;
	    boolean menorId = id < 18;
	    System.out.println(menorId);
	    
	    boolean verdade = true;
	    
	    System.out.println(verdade);
	    
	    char letra = ' ';
	    System.out.println(letra);
	}

	
}
